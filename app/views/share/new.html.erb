<%= form_for @movie, url: share_index_path, class: "container" do |f| %>
  <div class="mb-3">
    <div class="col-md-6 offset-md-3">
      <%= f.label :url, "Youtube URL:", class: "form-label" %>
      <%= f.text_field :url, class: "form-control", required: true %>
    </div>
  </div>
  <div class="mb-3">
    <div class="col-md-6 offset-md-3">
      <div class="text-end">
        <%= f.submit "Submit", class: "btn btn-dark" %>
      </div>
    </div>
  </div>
<% end %>
